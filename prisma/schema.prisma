generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Date {
  id     String   @id @default(cuid())
  date   DateTime @unique
  events Event[]  @relation("DateEvents")

  @@map("dates")
}

model Event {
  id        String @id @default(cuid())
  eventName String
  userId    String
  dateId    String
  date      Date   @relation("DateEvents", fields: [dateId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([dateId, userId])
}
